/* miniprogram/pages/recommend/recommend.wxss */
.container {
  display: flex;
  flex-direction: row;
  padding: 6px;
}

.left {
  flex:2;
  height:80px;
}

.right {
  flex:3;
  height:80px;
  margin-left: 8px;
}

.name {
  color: #3498DB;
}

.type {
  font-size: 12px;
  display: -webkit-box;
  text-overflow: ellipsis;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  margin-top: 4px;
  margin-bottom: 4px;
}

.address {
  font-size: 12px;
  color: gray;
  display: -webkit-box;
  text-overflow: ellipsis;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
}

.status {
  padding: 16rpx;
  text-align: center;
}