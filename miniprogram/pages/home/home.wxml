<!--miniprogram/pages/home/home.wxml-->
<map style="width:100%;height:300px"
  latitude="{{markers[0].latitude}}" 
  longitude="{{markers[0].longitude}}"
  markers="{{markers}}"
  polyline="{{polyline}}"
  ></map>
<button bindtap="showLine" hidden="false">显示路径</button>
<picker class="view_picker" bindchange="bindPickerChange" value="{{viewIndex}}" range="{{views}}">
  <view>当前选择：{{views[viewIndex]}}</view>
</picker>
<button class="button" type="primary">切换视图</button>
<button class="button" type="primary">查看详情</button>
